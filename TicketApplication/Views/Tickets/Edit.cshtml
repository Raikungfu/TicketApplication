@model TicketApplication.Models.Ticket

@{
    ViewData["Title"] = "Edit Ticket";
}

<div class="container mt-5">
    <h1 class="text-center">Edit Ticket</h1>
    <h4 class="text-center">Update Ticket Details</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter ticket title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter ticket description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Event" class="control-label"></label>
                    <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                    <span asp-validation-for="EventId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Zone" class="control-label"></label>
                    <select asp-for="ZoneId" class="form-control" asp-items="ViewBag.ZoneId"></select>
                    <span asp-validation-for="ZoneId" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
