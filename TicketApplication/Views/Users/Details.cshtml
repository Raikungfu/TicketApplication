@model TicketApplication.Models.User
@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">User Details</h2>
        </div>
        <div class="card-body">
            <h4 class="text-secondary">User Information</h4>
            <hr />
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>

            <hr />
            <h4 class="text-secondary">Purchased Events</h4>
            @if (ViewBag.PurchasedEvents != null && ViewBag.PurchasedEvents.Count > 0)
            {
                <p>The user has purchased @ViewBag.PurchasedEvents.Count event(s).</p>
                <ul>
                    @foreach (var eventDetail in ViewBag.PurchasedEvents)
                    {
                        <li>
                            @eventDetail.Title - Tickets Purchased: @eventDetail.TotalTickets
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No events purchased yet.</p>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ml-2">Edit</a>
    </div>
</div>
