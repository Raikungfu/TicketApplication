@model TicketApplication.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg border-light rounded">
        <div class="card-header bg-primary text-white rounded-top">
            <h2 class="mb-0">User Profile</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4 text-center">
                    <img src="@ViewData["RankLogo"]" alt="Rank Logo" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                    <h4>@Model.Rank</h4>
                </div>
                <div class="col-md-8">
                    <h5 class="text-secondary">Personal Information</h5>
                    <hr />
                    <div class="mb-3">
                        <label class="form-label fw-bold">Name</label>
                        <p class="form-control-static">@Model.Name</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <p class="form-control-static">@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Phone Number</label>
                        <p class="form-control-static">@Model.PhoneNumber</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Address</label>
                        <p class="form-control-static">@Model.Address</p>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-action="EditProfile" class="btn btn-warning btn-lg">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
