<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh;
            margin: 0;
        }

        /* Left navigation panel */
        .nav-panel {
            width: 30%;
            background-color: #f8f8f8;
            padding: 20px;
            border-right: 1px solid #ccc;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .nav-panel a {
                display: block;
                padding: 10px;
                text-decoration: none;
                color: #333;
                font-size: 16px;
                cursor: pointer;
            }

                .nav-panel a:hover, .nav-panel a.active {
                    background-color: #e0e0e0;
                    color: #000;
                }

        /* Right content panel */
        .content-panel {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }

        .content-section {
            display: none;
        }

            .content-section.active {
                display: block;
            }
    </style>
</head>
<body>

    <div class="nav-panel">
        <a onclick="showContent('account')">Trang tài khoản</a>
        <a onclick="showContent('orders')">Đơn hàng</a>
        <a onclick="showContent('downloads')">Tải xuống</a>
        <a onclick="showContent('address')">Địa chỉ</a>
        <a onclick="showContent('profile')" class="active">Tài khoản</a>
        <a onclick="showContent('logout')">Đăng xuất</a>
    </div>

    <div class="content-panel">
        <div id="account" class="content-section">
            <h2>Trang tài khoản</h2>
            <p>Nội dung của trang tài khoản.</p>
        </div>
        <div id="orders" class="content-section">
            <h2>Đơn hàng</h2>
            <p>Nội dung của đơn hàng.</p>
        </div>
        <div id="downloads" class="content-section">
            <h2>Tải xuống</h2>
            <p>Nội dung của mục tải xuống.</p>
        </div>
        <div id="address" class="content-section">
            <h2>Địa chỉ</h2>
            <p>Nội dung của địa chỉ.</p>
        </div>
        <div id="profile" class="content-section active">
            <h2>Tài khoản</h2>
            <form action="" method="post">
                <p>
                    <label for="account_first_name">Tên:</label>
                    <input type="text" id="account_first_name" name="account_first_name" value="">
                </p>
                <p>
                    <label for="account_last_name">Họ:</label>
                    <input type="text" id="account_last_name" name="account_last_name" value="">
                </p>
                <p>
                    <label for="account_display_name">Tên hiển thị:</label>
                    <input type="text" id="account_display_name" name="account_display_name" value="raikungfu@gmail.com">
                </p>
                <p>
                    <label for="account_email">Địa chỉ email:</label>
                    <input type="email" id="account_email" name="account_email" value="raikungfu@gmail.com">
                </p>
                <fieldset>
                    <legend>Thay đổi mật khẩu</legend>
                    <p>
                        <label for="password_current">Mật khẩu hiện tại:</label>
                        <input type="password" id="password_current" name="password_current">
                    </p>
                    <p>
                        <label for="password_new">Mật khẩu mới:</label>
                        <input type="password" id="password_new" name="password_new">
                    </p>
                    <p>
                        <label for="password_confirm">Xác nhận mật khẩu mới:</label>
                        <input type="password" id="password_confirm" name="password_confirm">
                    </p>
                </fieldset>
                <button type="submit">Lưu thay đổi</button>
            </form>
        </div>
        <div id="logout" class="content-section">
            <h2>Đăng xuất</h2>
            <p>Bạn có chắc chắn muốn đăng xuất?</p>
        </div>
    </div>

    <script>
        function showContent(sectionId) {
            const sections = document.querySelectorAll('.content-section');
            const navLinks = document.querySelectorAll('.nav-panel a');

            sections.forEach(section => {
                section.classList.remove('active');
            });

            navLinks.forEach(link => {
                link.classList.remove('active');
            });

            document.getElementById(sectionId).classList.add('active');
            event.target.classList.add('active');
        }
    </script>

</body>
</html>
