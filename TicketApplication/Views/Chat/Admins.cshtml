@model IEnumerable<TicketApplication.Models.User>

@{
    ViewBag.Title = "Danh sách Admin";
}

<div class="container-fluid content">
    <main role="main" class="pb-3">
        <h2>Danh sách Admin</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Tên người dùng</th>
                    <th>Email</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <td>@admin.Name</td>
                        <td>@admin.Email</td>
                        <td>
                            <a href="@Url.Action("StartChat", "Chat", new { adminId = admin.Id })" class="btn btn-primary">Chat</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</div>

<style>
    .content {
        height: calc(100vh - 400px);
        overflow-y: auto;
        padding: 15px;
    }

    main {
        flex: 1;
    }

    .table {
        width: 100%;
    }
</style>
