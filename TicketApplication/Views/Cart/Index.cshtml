@model List<CartItem>

<div class="container mt-5 mh-100">
    <h2>Giỏ hàng của bạn</h2>
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tạm tính</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" alt="Product Image" style="width: 50px; height: 50px;">
                        <span>@item.Name</span>
                    </td>
                    <td>@item.Price.ToString("N0") đ</td>
                    <td>
                        <input type="number" value="@item.Quantity" min="1" class="form-control" style="width: 70px;">
                    </td>
                    <td>@item.Total.ToString("N0") đ</td>
                    <td>
                        <button class="btn btn-danger">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4 offset-md-8">
            <h4 class="d-flex justify-content-between">
                <span>Tổng:</span>
                <strong>@Model.Sum(i => i.Total).ToString("N0") đ</strong>
            </h4>
            <button class="btn btn-primary btn-block mt-3">Tiến hành thanh toán</button>
        </div>
    </div>
</div>
